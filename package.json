{
  "name": "love-story-website",
  "version": "1.0.0",
  "description": "A beautiful, interactive romantic website built with modern web technologies",
  "main": "index.html",
  "scripts": {
    "start": "npx live-server --port=3000 --open=/index.html",
    "dev": "npx live-server --port=3000 --open=/index.html --watch=.",
    "build": "echo 'Building for production...' && npm run minify",
    "minify": "npx html-minifier --collapse-whitespace --remove-comments --minify-css --minify-js index.html -o dist/index.html",
    "serve": "npx http-server -p 8080 -o",
    "lint": "npx eslint script.js",
    "format": "npx prettier --write *.html *.css *.js"
  },
  "keywords": [
    "love",
    "romantic",
    "website",
    "html",
    "css",
    "javascript",
    "responsive",
    "modern",
    "interactive"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "http-server": "^14.1.1",
    "html-minifier": "^4.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "your-repository-url"
  },
  "homepage": "your-website-url",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}

